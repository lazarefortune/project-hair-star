{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="space-y-3">
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.message) }}

        <button type="submit" class="btn-md btn-primary">Envoyer</button>
    </div>

    {{ form_end(form) }}

{% endblock %}
