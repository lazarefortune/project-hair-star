{% extends 'base.html.twig' %}

{% block title %}
    {{ app_name }} - Résultat du Paiement
{% endblock %}

{% block body %}
    <div class="w-full max-w-4xl mx-auto px-0 sm:px-6 lg:px-8 bg-white p-6">
        {% if status == 'success' %}
            <h1 class="text-center text-2xl sm:text-5xl font-semibold text-green-500 mt-4 mb-10 sm:mb-16">
                Paiement Réussi !
            </h1>

            <section class="space-y-8">
                <div class="border-b pb-6">
                    <h3 class="text-xl sm:text-3xl font-semibold text-gray-700">
                        Merci pour votre achat !
                    </h3>
                    <p class="text text-gray-600 mt-2">
                        Votre paiement a bien été enregistré. Vous allez recevoir un email de confirmation.
                    </p>
                </div>
            </section>
        {% else %}
            <h1 class="text-center text-2xl sm:text-5xl font-semibold text-red-500 mt-4 mb-10 sm:mb-16">
                Paiement Échoué.
            </h1>

            <section class="space-y-8">
                <div class="border-b pb-6">
                    <h3 class="text-xl sm:text-3xl font-semibold text-gray-700">
                        La transaction n'a pas été complétée.
                    </h3>
                    <p class="text text-gray-600 mt-2">
                        Si vous pensez qu'il s'agit d'une erreur, veuillez nous contacter.
                    </p>
                </div>
            </section>
        {% endif %}
    </div>
{% endblock %}
