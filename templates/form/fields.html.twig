{% block switchbox_widget %}
    {% include 'components/_switchbox.html.twig' with {
        'checked': form.vars.checked,
        'label_title': form.vars.label_title,
        'label_on': form.vars.label_on|default('Activé'),
        'label_off': form.vars.label_off|default('Désactivé')
    } %}
{% endblock %}

{% extends 'form_div_layout.html.twig' %}

{% block money_widget %}
    <div class="relative mt-2 rounded-md shadow-sm">
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
        <span class="text-gray-500 sm:text-md">
            {{ form.vars.currency|default('€') }}
        </span>
        </div>
        <input type="text"
                {{ block('widget_attributes') }}
               value="{{ form.vars.value }}"
               placeholder="0.00">
    </div>
{% endblock %}