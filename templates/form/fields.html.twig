{% block switchbox_widget %}
    {% include 'components/_switchbox.html.twig' with {
        'checked': form.vars.checked,
        'label_title': form.vars.label_title,
        'label_on': form.vars.label_on|default('Activé'),
        'label_off': form.vars.label_off|default('Désactivé')
    } %}
{% endblock %}

{% extends 'form_div_layout.html.twig' %}

{% block money_widget %}
    <div class="relative mt-2 rounded-md shadow-sm">
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
        <span class="text-gray-500 sm:text-md">
            {{ form.vars.currency|default('€') }}
        </span>
        </div>
        <input type="text"
                {{ block('widget_attributes') }}
               value="{{ form.vars.value }}"
               placeholder="0.00">
    </div>
{% endblock %}

{# customize form row , i would like to have in order 1. form_label, 2. form_widget , 3. form_errors #}
{% block form_row %}
    <div class="">
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {% if form.vars.errors %}
            <div class="form-error">
                {{ form_errors(form) }}
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block choice_widget_expanded %}

    <div {{ block('widget_container_attributes') }}>
        {% for child in form %}
            <div class="flex items-center space-x-2">
                {{ form_widget(child) }}
                {{ form_label(child) }}
            </div>
        {% endfor %}
    </div>

{% endblock %}
