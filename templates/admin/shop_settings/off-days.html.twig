{% extends 'admin/base.html.twig' %}

{% block body %}

    <a href="{{ path('app_admin_shop_settings_index') }}"
       class="btn-link mb-4">
        {{ icon('arrow-left', '', 'mr-2') }}
        <span>
            paramètres
        </span>
    </a>

    <div class="flex justify-between items-center mb-6">
        <h4 class="text-2xl font-bold md:text-3xl">
            Jours de fermeture
        </h4>
    </div>

    <div class="mt-2">
        {{ include('partials/flash.html.twig') }}
    </div>

    <div class="mt-6">
        {{ form_start(form) }}
        <div class="mt-4 grid grid-cols-1 gap-4 card card-custom md:grid-cols-3">
            <div class="col-span-1 flex flex-col justify-start">
                <h6 class="card-section-title">
                    Disponibilités
                </h6>
                <p class="card-section-subtitle">
                    Cochez les jours de fermeture de votre établissement.
                </p>
            </div>
            <div class="col-span-2 flex flex-col space-y-3">
                <div class="mt-4 flex flex-row space-y-1">
                    {{ form_row(form.offdays) }}
                </div>
            </div>
        </div>

        <div class="border-t border-gray-200 pt-5 sm:col-span-full mb-10">
            <div class="flex justify-end">
                <button type="submit" class="btn btn-md btn-primary">
                    {{ icon('save') }}
                    <span>
                        Enregistrer
                    </span>
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>



{% endblock %}
