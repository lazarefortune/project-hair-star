{% extends 'admin/base.html.twig' %}

{% block body %}
    <a href="{{ path('app_admin_shop_settings_index') }}"
       class="btn-link mb-4">
        {{ icon('arrow-left', '', 'mr-2') }}
        <span>
            paramètres
        </span>
    </a>

    <div class="flex justify-between items-center mb-6">
        <h4 class="text-2xl font-bold md:text-3xl">
            Vacances
        </h4>
        <a href="{{ path('app_admin_shop_settings_holidays_new') }}"
           class="btn btn-md btn-primary">
            {{ icon('plus') }}
            <span>
                Ajouter
            </span>
        </a>
    </div>

    <div class="mt-2">
        {{ include('partials/flash.html.twig') }}
    </div>

    <div class="card-simple">
        <div class="block w-full overflow-x-auto">
            <table class="table w-full border-collapse items-center bg-transparent">
                <thead class="bg-gray-50">
                <tr>
                    <th>
                        <input type="checkbox"
                               class="">
                    </th>
                    <th>
                        Motif
                    </th>
                    <th>
                        Date de début
                    </th>
                    <th>
                        Date de fin
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% if holidays is empty %}
                    <tr>
                        <td colspan="5" class="text-center">
                            Pas de vacances en vue
                        </td>
                    </tr>
                {% endif %}
                {% for holiday in holidays %}
                    <tr>
                        <th class="text-left">
                            <input type="checkbox"
                                   class="">
                        </th>
                        <td>
                            {{ holiday.title }}
                        </td>
                        <td>
                            {{ holiday.startDate|date('d/m/Y') }}
                        </td>
                        <td>
                            {{ holiday.endDate|date('d/m/Y') }}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_shop_settings_holidays_edit', {id: holiday.id}) }}"
                               class="btn-icon">
                                {{ icon('pencil') }}
                            </a>

                            <button
                                    class="btn-icon modal-button" data-modal-id="modal-id-{{ holiday.id }}">
                                {{ icon('trash') }}
                            </button>

                            {% include 'components/_delete-modal.html.twig' with {
                                'id': 'modal-id-' ~ holiday.id,
                                'title': 'Supprimer les congés',
                                'content': 'Vous êtes sur le point d\'annuler vos congés : <strong>' ~ holiday.title ~ '</strong>.<br>Cette action est irréversible.',
                                'form_action': path('app_admin_shop_settings_holidays_delete', {'id': holiday.id}),
                                'csrf_value': csrf_token('delete' ~ holiday.id),
                                'btn_label': 'Supprimer'
                            } %}

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

