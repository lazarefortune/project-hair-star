{% extends 'admin/layouts/card.html.twig' %}

{% block title %}CategoryService index{% endblock %}
{% block card_title %}
    Type de service
{% endblock %}

{% block card_actions %}
    <a href="{{ path('app_admin_category_service_new') }}"
       class="btn btn-md btn-primary">
        {{ icon('plus') }}
        <span class="ml-2">Ajouter</span>
    </a>
{% endblock %}

{% block card_style '' %}

{% block card_body %}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for serviceType in category_services %}
            <div class="bg-white shadow-md rounded-md p-4 flex flex-col justify-between relative">
                <h3 class="text-lg font-bold">{{ serviceType.name }}</h3>
                <span class="badge absolute top-3 right-3 {{ serviceType.isActive ? 'badge-success' : 'badge-danger' }}">
                    {{ serviceType.isActive ? 'Actif' : 'Inactif' }}
                </span>
                <p class="text-sm text-gray-500 mt-2 flex-1">
                    {{ serviceType.description }}
                </p>
                <div class="mt-4 flex justify-end space-x-2">
                    <a href="{{ path('app_admin_category_service_edit', {'id': serviceType.id}) }}"
                       class="btn btn-md btn-primary">
                        {{ icon('edit') }}
                        <span class="ml-2">Editer</span>
                    </a>
                    <a href="{{ path('app_admin_category_service_delete', {'id': serviceType.id}) }}"
                       class="btn btn-md btn-danger">
                        {{ icon('trash') }}
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>


