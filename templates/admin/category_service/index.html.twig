{% extends 'admin/base.html.twig' %}


{% block body %}

    <div class="flex justify-between items-center mb-6">
        <h4 class="text-2xl font-bold md:text-3xl">
            Cat√©gories
        </h4>
        <a href="{{ path('app_admin_category_service_new') }}"
           class="btn btn-md btn-primary">
            {{ icon('plus') }}
            <span>
                Ajouter
            </span>
        </a>
    </div>

    <div class="card-simple">
        <div class="mb-6 px-4 sm:px-6">
            <div class="flex justify-between">
                <div class="flex-1 flex justify-between">
                    <input type="text" class="form-control" placeholder="Rechercher...">
                </div>
            </div>
        </div>

        <div class="block w-full overflow-x-auto">
            <table class="table w-full border-collapse items-center bg-transparent">
                <thead class="bg-gray-50">
                <tr>
                    <th>
                        <input type="checkbox"
                               class="">
                    </th>
                    <th>
                        Nom
                    </th>
                    <th>
                        Statut
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for category in category_services %}
                    <tr>
                        <th class="text-left">
                            <input type="checkbox"
                                   class="">
                        </th>
                        <td>
                            {{ category.name }}
                        </td>
                        <td>
                            {% if category.isActive %}
                                <span class="badge badge-success">Actif</span>
                            {% else %}
                                <span class="badge badge-danger">Inactif</span>
                            {% endif %}
                        </td>
                        <td>
                            {{ category.description }}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_category_service_edit', {'id': category.id}) }}"
                               class="btn-icon">
                                {{ icon('pencil') }}
                            </a>
                            <a href=""
                               class="btn-icon">
                                {{ icon('trash') }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}