{% extends 'admin/layouts/card.html.twig' %}

{% block card_title %}Détails Catégorie{% endblock %}

{% block card_actions %}
    <a href="{{ path('app_admin_category_service_index') }}"
       class="card-btn-action">
        {{ icon('arrow-left') }}
        <span class="ml-2 hidden md:inline-block">Toutes les catégories</span>
    </a>
    <a href="{{ path('app_admin_category_service_edit', {'id': category_service.id}) }}"
       class="card-btn-action">
        {{ icon('pen') }}
        <span class="ml-2 hidden md:inline-block">Modifier</span>
    </a>
    <form method="post" action="{{ path('app_admin_category_service_delete', {'id': category_service.id}) }}"
          onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category_service.id) }}">

        <button class="card-btn-action">
            {{ icon('trash') }}
            <span class="ml-2 hidden md:inline-block">Supprimer</span>
        </button>
    </form>
{% endblock %}

{% block card_body %}
    <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ category_service.name }}</td>
        </tr>
        </tbody>
    </table>


    {{ include('admin/category_service/_delete_form.html.twig') }}
{% endblock %}
