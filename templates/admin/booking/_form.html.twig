{{ form_start(form) }}
<div class="mt-4 grid grid-cols-1 gap-4 card card-custom md:grid-cols-3">
    <div class="col-span-1 flex flex-col justify-start">
        <h6 class="card-section-title">
            Ajouter un rendez-vous
        </h6>
        <p class="card-section-subtitle">
            Modifier les informations de base de votre rendez-vous
        </p>
    </div>
    <div class="col-span-2 flex flex-col space-y-3">
        <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-3 sm:grid-cols-2">
            <div class="col-span-full">
                {{ form_row(form.client) }}
            </div>

            <div class="col-span-full">
                {{ form_row(form.prestation) }}
            </div>

            <div class="col-span-full">
                {{ form_row(form.bookingDate) }}
            </div>

            <div class="col-span-full">
                {{ form_row(form.bookingTime) }}
            </div>

        </div>
    </div>
</div>

<!-- submit btn at right -->
<div class="border-t border-gray-200 pt-5 sm:col-span-full mb-10">
    <div class="flex justify-end">
        <button type="submit" class="btn btn-md btn-primary">
            {{ icon('save') }}
            <span>
                {{ button_label|default('Enregistrer') }}
            </span>
        </button>
    </div>
</div>
{{ form_end(form) }}