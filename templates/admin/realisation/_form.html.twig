<div class="col-md-10 mx-auto">
    {{ form_start(form) }}
    <div class="card mb-3">

        <div class="card-body">

            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="form-check form-switch">
                        {{ form_widget(form.isPublic) }}
                        {{ form_label(form.isPublic) }}
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 col-12">
                    {{ form_row(form.dateRealisation) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.heureDebut) }}
                        {{ form_widget(form.heureDebut) }}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.heureFin) }}
                        {{ form_widget(form.heureFin) }}
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_label(form.tarif) }}
                        <div class="input-group mb-3">
                            {{ form_widget(form.tarif, {'attr': {'aria-describedby': 'input-group-realisation-price'}}) }}
                            <span class="input-group-text" id="input-group-realisation-price">â‚¬</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                        <div class="form-check form-switch">
                            {{ form_widget(form.isTarifPublic) }}
                            {{ form_label(form.isTarifPublic) }}
                        </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    {{ form_row(form.images) }}
                </div>
            </div>

            <div class="d-flex justify-content-between mb-2">
                <button class="btn btn-primary">
                    <i class="las la-save"></i>
                    {{ button_label|default('Save') }}
                </button>

                {% if app.request.attributes.get('_route') == 'app_admin_realisation_edit' %}
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteRealisationModal">
                        <i class="las la-trash"></i>
                        Supprimer
                    </button>
                {% endif %}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>

