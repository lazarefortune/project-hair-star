{% extends 'admin/base.html.twig' %}

{% block title %}Prestations{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <h4 class="text-2xl font-bold md:text-3xl">
            Prestations
        </h4>
        <a href="{{ path('app_admin_prestation_new') }}"
           class="btn btn-md btn-primary">
            {{ icon('plus') }}
            <span>
                Ajouter
            </span>
        </a>
    </div>

    <div class="card-simple">

        <div class="block w-full overflow-x-auto">
            <table class="table w-full border-collapse items-center bg-transparent">
                <thead class="bg-gray-50">
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Nom
                    </th>
                    <th>
                        Durée
                    </th>
                    <th>
                        Tarif
                    </th>
                    <th>
                        En ligne?
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% if prestations is empty %}
                    <tr>
                        <td colspan="5" class="text-center">
                            Aucune donnée disponible
                        </td>
                    </tr>
                {% endif %}
                {% for prestation in prestations %}
                    <tr>
                        <td class="text-left">
                            {{ prestation.id }}
                        </td>
                        <td>
                            {{ prestation.name }}
                        </td>
                        <td>
                            {{ prestation.duration|duration_format }}
                        </td>
                        <td>
                            {{ prestation.price|price_format }}
                        </td>
                        <td>
                            <div class="empty-circle empty-circle-{% if prestation.isActive %}success{% else %}danger{% endif %}"></div>
                        </td>
                        <td>
                            <a href="{{ path('app_admin_prestation_edit', {'id': prestation.id}) }}"
                               class="btn-icon">
                                {{ icon('pencil') }}
                            </a>
                            <button
                                    class="btn-icon modal-button" data-modal-id="modal-id-{{ prestation.id }}">
                                {{ icon('trash') }}
                            </button>

                            {% include 'components/_delete-modal.html.twig' with {
                                'id': 'modal-id-' ~ prestation.id,
                                'title': 'Supprimer la prestation',
                                'content': 'Vous êtes sur le point de supprimer la prestation <strong>' ~ prestation.name ~ '</strong>.<br>Cette action est irréversible.',
                                'form_action': path('app_admin_prestation_delete', {'id': prestation.id}),
                                'csrf_value': csrf_token('delete' ~ prestation.id),
                                'btn_label': 'Supprimer'
                            } %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
