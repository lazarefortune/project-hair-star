{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <h4 class="text-2xl font-bold md:text-3xl">
            Prestations
        </h4>
        <a href="{{ path('app_admin_service_index') }}"
           class="btn btn-md btn-primary">
            {{ icon('subdirectory-left') }}
            <span>
                Retour
            </span>
        </a>
    </div>

    <div class="mt-2">
        {{ include('partials/flash.html.twig') }}
    </div>

    {{ form_start(form) }}
    <div class="mt-4 grid grid-cols-1 gap-4 card card-custom md:grid-cols-3">
        <div class="col-span-1 flex flex-col justify-start">
            <h6 class="text-lg font-bold">
                Informations basiques
            </h6>
            <p class="mt-2 text-sm text-gray-500">
                Modifier les informations de base de votre prestation
            </p>
        </div>
        <div class="col-span-2 flex flex-col space-y-3">
            <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-3 sm:grid-cols-2">
                <div class="col-span-full sm:col-span-1">
                    {{ form_row(form.name, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Nom du service',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>

                <div class="sm:col-span-full">
                    {{ form_row(form.description, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Description',
                        'label_attr': {
                            'class': 'label',
                        }
                    }) }}
                </div>

                <div class="col-span-full sm:col-span-1">
                    {{ form_row(form.price, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Prix',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 grid grid-cols-1 gap-4 card card-custom md:grid-cols-3">
        <div class="col-span-1 flex flex-col justify-start">
            <h6 class="text-lg font-bold">
                Calendrier
            </h6>
            <p class="mt-2 text-sm text-gray-500">
                Modifier les informations de base de votre prestation
            </p>
        </div>
        <div class="col-span-2 flex flex-col space-y-3">
            <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-3 sm:grid-cols-2">

                <div class="col-span-full sm:col-span-1">
                    {{ form_row(form.startDate, {
                        'attr': {
                            'class': 'flatpickr-date-input-today form-input-md'
                        },
                        'label': 'Date de debut',
                        'label_attr': {
                            'class': 'label',
                        }
                    }) }}
                </div>

                <div class="col-span-full sm:col-span-1">
                    {{ form_row(form.endDate, {
                        'attr': {
                            'class': 'flatpickr-date-input-today form-input-md'
                        },
                        'label': 'Date de fin',
                        'label_attr': {
                            'class': 'label',
                        }
                    }) }}
                </div>

                <div class="col-span-full sm:col-span-1">
                    {{ form_row(form.startTime, {
                        'attr': {
                            'class': 'flatpickr-time-input form-input-md'
                        },
                        'label': 'Heure de debut',
                        'label_attr': {
                            'class': 'label',
                        }
                    }) }}
                </div>

                <div class="col-span-full sm:col-span-1">
                    {{ form_row(form.endTime, {
                        'attr': {
                            'class': 'flatpickr-time-input form-input-md'
                        },
                        'label': 'Heure de fin',
                        'label_attr': {
                            'class': 'label',
                        }
                    }) }}
                </div>

                <div class="col-span-full sm:col-span-1">
                    {{ form_row(form.bufferTime) }}
                </div>

            </div>
        </div>
    </div>

    <div class="mt-4 grid grid-cols-1 gap-4 card card-custom md:grid-cols-3">
        <div class="col-span-1 flex flex-col justify-start">
            <h6 class="text-lg font-bold">
                Personnalisation
            </h6>
            <p class="mt-2 text-sm text-gray-500">
                Modifier les informations de base de votre prestation
            </p>
        </div>
        <div class="col-span-2 flex flex-col space-y-3">
            <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-3 sm:grid-cols-2">

                <div class="col-span-full sm:col-span-1">
                    {{ form_row(form.duration, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Dur√©e',
                        'label_attr': {
                            'class': 'label',
                        }
                    }) }}
                </div>

                <div class="col-span-full sm:col-span-1">
                    {{ form_row(form.avalaibleSpacePerService, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Nombre de place',
                        'label_attr': {
                            'class': 'label',
                        }
                    }) }}
                </div>
            </div>
        </div>
    </div>

    <!-- submit btn at right -->
    <div class="border-t border-gray-200 pt-5 sm:col-span-full mb-5">
        <div class="flex justify-end">
            <button type="submit" class="btn btn-md btn-primary">
                {{ icon('save') }}
                <span>Enregistrer</span>
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

