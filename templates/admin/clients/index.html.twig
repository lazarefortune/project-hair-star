{% extends 'admin/base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6">
        <h4 class="text-2xl font-bold md:text-3xl">
            Clients
        </h4>
        <a href="{{ path('app_admin_clients_new') }}"
           class="btn btn-md btn-primary">
            {{ icon('plus') }}
            <span>
                Ajouter
            </span>
        </a>
    </div>

    <div class="hidden md:block">
        <div class="card">
        {% include 'admin/clients/_items.html.twig' with {rows: rows} %}

        {% if rows.getTotalItemCount > 5 %}
            <div class="flex justify-center mt-6">
                {{ knp_pagination_render(rows) }}
            </div>
        {% endif %}
        </div>
    </div>

    <div class="block md:hidden">
        {% include 'admin/clients/_items-mobile.html.twig' with {rows: rows} %}

        {% if rows.getTotalItemCount > 5 %}
        <div class="flex justify-center mt-6">
            {{ knp_pagination_render(rows) }}
        </div>
        {% endif %}
    </div>


{% endblock %}
