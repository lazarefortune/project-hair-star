<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {% for row in rows %}
        <div class="bg-white flex px-3 py-4 rounded-md shadow-sm border-thin">
            <div class="flex items-center justify-center animate-pulse">
                {# <div class="w-12 h-12 rounded-full bg-gray-200 animate-pulse"></div> #}
                <svg class="w-10 h-10 me-3 text-gray-200 dark:text-gray-700" aria-hidden="true"
                     xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"></path>
                </svg>
            </div>
            <div class="flex flex-col flex-grow ml-4">
                <div class="text-base font-semibold text-gray-700">{{ row.fullname }}</div>
                <div class="text-sm text-gray-500">{{ row.email }}</div>
            </div>
            <div class="flex items-center justify-center space-x-4">
                <a href="tel:{{ row.phone }}"
                   class="text-base text-gray-500 hover:text-gray-700">
                    {{ icon('phone', '2sm') }}
                </a>
                <a href="mailto:{{ row.email }}"
                   class="text-base text-gray-500 hover:text-gray-700">
                    {{ icon('mail', '2sm') }}
                </a>
                <a href=""
                   class="text-base text-gray-500 hover:text-gray-700">
                    {{ icon('eye', '2sm') }}
                </a>
            </div>
        </div>
    {% endfor %}
</div>
