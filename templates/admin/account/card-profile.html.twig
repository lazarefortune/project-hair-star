{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-12 col-md-3">
        <!-- user avatar and name -->
        <div class="card mb-4">
            <div class="card-body d-flex justify-content-center text-center">
                <img src="{{ asset('uploads/avatars/' ~ app.user.avatar) }}" alt="avatar" class="img-fluid avatar profile-image">
            </div>
        </div>
        <!-- user menu -->
        {% include 'admin/account/_user_menu.html.twig' %}
    </div>
    <div class="co-12 col-md-9">
        <div class="card">
            <h4 class="card-header bg-white">
                {% block card_title %}{% endblock %}
            </h4>
            <div class="card-body">
                {% block card_body %}{% endblock %}
            </div>
        </div>
    </div>
</div>
{% endblock %}