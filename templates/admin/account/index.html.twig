{% extends 'admin/base.html.twig' %}

{% block body %}

    <h4 class="text-2xl font-bold md:text-3xl">Mon compte</h4>

    <div class="mt-2">
        {{ include('partials/flash.html.twig') }}
    </div>

    <div class="mt-4 grid grid-cols-1 gap-4 card card-custom md:grid-cols-3">
        <div class="col-span-1 flex flex-col justify-start">
            <h6 class="text-lg font-bold">
                Profil
            </h6>
            <p class="mt-2 text-sm text-gray-600">
                Ces informations ne seront pas partagées avec d'autres utilisateurs.
            </p>
        </div>
        <div class="col-span-2 flex flex-col space-y-3">
            {{ form_start(form) }}
            <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-3 sm:grid-cols-2">
                <div class="col-span-full sm:col-span-1">
                    {{ form_row(form.fullname, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Nom complet',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>

                <div class="col-span-full sm:col-span-1">
                    {{ form_row(form.phone, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Numéro de téléphone',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>

                <div class="sm:col-span-full">
                    {{ form_row(form.email, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Adresse e-mail',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>


                <div class="sm:col-span-full">
                    {{ form_row(form.dateOfBirthday, {
                        'attr': {
                            'class': 'flatpickr-date-birthday form-input-md'
                        },
                        'label': 'Date de naissance',
                        'label_attr': {
                            'class': 'label',
                        }
                    }) }}
                </div>

                <div class="col-span-full">
                    {{ form_row(form.avatarFile) }}
                </div>

                <!-- submit btn at right -->
                <div class="border-t border-gray-200 pt-5 sm:col-span-full">
                    <div class="flex justify-end">
                        <button type="submit" class="btn btn-md btn-primary">
                            {{ icon('save') }}
                            <span>Enregistrer</span>
                        </button>
                    </div>
                </div>

            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
