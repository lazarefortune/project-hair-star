{% extends 'admin/layouts/card.html.twig' %}

{% block card_title 'Mon profil' %}

{% block card_body %}

    {{ form_start(formUser) }}

    <div class="space-y-12 sm:mx-2">
        <div class="border-b border-gray-900/10 pb-12">
            <h2 class="text-lg font-semibold leading-7 text-gray-900">Informations personnelles</h2>
            <p class="mt-1 text-base leading-6 text-gray-600">
                Utilisez une adresse e-mail permanente où vous pouvez recevoir des e-mails.
            </p>

            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-3 sm:grid-cols-6">

                <div class="sm:col-span-4">
                    {{ form_row(formUser.fullname, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Nom complet',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>

                <div class="sm:col-span-4">
                    {{ form_row(formUser.email, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Adresse e-mail',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>

                <div class="sm:col-span-3">
                    <label for="country"
                           class="label">Pays</label>
                    <div class="mt-2">
                        <select id="country" name="country" autocomplete="country-name"
                                class="form-input-md sm:max-w-xs">
                            <option>France</option>
                            <option disabled>Belgique(bientôt)</option>
                        </select>
                    </div>
                </div>

                <div class="sm:col-span-4">
                    {{ form_row(formUser.phone, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Numéro de téléphone',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>

                <div class="sm:col-span-4">
                    {{ form_row(formUser.dateOfBirthday, {
                        'attr': {
                            'class': 'flatpickr-date-birthday form-input-md'
                        },
                        'label': 'Date de naissance',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>

                <div class="col-span-full">
                    {{ form_row(formUser.avatarFile) }}
                </div>

                <div class="col-span-full">
                    <label for="street-address" class="label">
                        Adresse
                    </label>
                    <div class="mt-2">
                        <input type="text" name="street-address" id="street-address"
                               autocomplete="street-address"
                               class="form-input-md">
                    </div>
                </div>

                <div class="sm:col-span-2 sm:col-start-1">
                    <label for="city" class="label">
                        Ville
                    </label>
                    <div class="mt-2">
                        <input type="text" name="city" id="city" autocomplete="address-level2"
                               class="form-input-md">
                    </div>
                </div>

                <div class="sm:col-span-2">
                    <label for="region" class="label">
                        Région
                    </label>
                    <div class="mt-2">
                        <input type="text" name="region" id="region" autocomplete="address-level1"
                               class="form-input-md">
                    </div>
                </div>

                <div class="sm:col-span-2">
                    <label for="postal-code" class="label">
                        Code postal
                    </label>
                    <div class="mt-2">
                        <input type="text" name="postal-code" id="postal-code" autocomplete="postal-code"
                               class="form-input-md">
                    </div>
                </div>
            </div>
        </div>

        {#        {{ include('admin/account/partials/_profil_form.html.twig') }} #}

        {#        {{ include('admin/account/partials/_notifications_form.html.twig') }} #}
    </div>

    <div class="mt-6 flex items-center justify-end gap-x-6">
        <button type="submit"
                class="rounded-md bg-indigo-600 px-3 py-2 text-base text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
            Sauvegarder
        </button>
    </div>
    {{ form_end(formUser) }}
{% endblock %}
