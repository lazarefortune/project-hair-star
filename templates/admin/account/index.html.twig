{% extends 'admin/layouts/card.html.twig' %}

{% block card_title 'Mon profil' %}

{% block card_style '' %}

{% block card_body %}


    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 font-inter">
        <div class="col-span-2 bg-white px-4 py-5 shadow sm:rounded-md sm:py-6 sm:px-8">
            {{ form_start(formUser) }}
            <h2 class="text-lg font-semibold leading-7 text-gray-900">
                {{ icon('user', 'h-5 w-5 mr-2') }}
                Informations personnelles
            </h2>
            <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-3">
                <div class="col-span-full sm:col-span-1">
                    {{ form_row(formUser.fullname, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Nom complet',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>

                <div class="col-span-full sm:col-span-1">
                    {{ form_row(formUser.phone, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Numéro de téléphone',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>

                <div class="sm:col-span-full">
                    {{ form_row(formUser.email, {
                        'attr': {
                            'class': 'form-input-md'
                        },
                        'label': 'Adresse e-mail',
                        'label_attr': {
                            'class': 'label'
                        }
                    }) }}
                </div>


                <div class="sm:col-span-full">
                    {{ form_row(formUser.dateOfBirthday, {
                        'attr': {
                            'class': 'flatpickr-date-birthday form-input-md'
                        },
                        'label': 'Date de naissance',
                        'label_attr': {
                            'class': 'label',
                        }
                    }) }}
                </div>

                <div class="col-span-full">
                    {{ form_row(formUser.avatarFile) }}
                </div>

                <!-- submit btn at right -->
                <div class="sm:col-span-full border-t border-gray-200 pt-5">
                    <div class="flex justify-end">
                        <button type="submit" class="btn btn-primary">
                            {{ icon('save', 'sm', 'mr-3') }}
                            Enregistrer
                        </button>
                    </div>
                </div>

            </div>
            {{ form_end(formUser) }}
        </div>

        <div class="col-span-1 bg-white px-4 py-5 shadow sm:rounded-md sm:p-6">
            <h2 class="text-lg font-semibold leading-7 text-gray-900">Votre photo de profil</h2>
            <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-3 sm:grid-cols-6">
            </div>
        </div>
    </div>



{% endblock %}
