{% extends 'admin/base.html.twig' %}

{% block title %} Mot de passe {% endblock %}

{% block body %}

    <a href="{{ path('app_admin_account_index') }}"
       class="btn-link mb-4">
        {{ icon('arrow-left', '', 'mr-2') }}
        <span>
            Mon compte
        </span>
    </a>

    <h4 class="text-2xl font-bold md:text-3xl">Mot de passe</h4>

    <div class="mt-4 grid grid-cols-1 gap-4 card card-custom md:grid-cols-3">
        <div class="col-span-1 flex flex-col justify-start">
            <h6 class="card-section-title">
                Modifier votre mot de passe
            </h6>
            <p class="card-section-subtitle">
                Votre mot de passe doit contenir au moins 6 caractères et être différent de votre email.
            </p>
        </div>
        <div class="col-span-2 flex flex-col space-y-3">
            {{ form_start(form) }}
            <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-3 sm:grid-cols-2">
                <div class="sm:col-span-full">
                    {{ form_row(form.currentPassword) }}
                </div>

                <div class="border-t border-primary-200 mt-5 mb-4 sm:col-span-full">
                </div>

                <div class="sm:col-span-full">
                    {{ form_row(form.password.first) }}
                </div>

                <div class="sm:col-span-full">
                    {{ form_row(form.password.second) }}
                </div>

                <div class="pt-5 sm:col-span-full">
                    <div class="flex justify-end">
                        <button type="submit" class="btn btn-md btn-primary">
                            {{ icon('save', 'mr-2') }}
                            <span>Modifier</span>
                        </button>
                    </div>
                </div>

            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


