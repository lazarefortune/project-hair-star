<label for="{{ form.vars.id }}" class="relative flex justify-start items-center p-2">
    <span class="sr-only">Basculer</span>
    <input type="checkbox" id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" {% if checked %}checked{% endif %}
           class="absolute top-0 left-0 w-full h-full peer hidden">
    <span class="bg-gray-300 w-11 h-7 rounded-full flex flex-shrink-0 items-center after:bg-white after:w-5 after:h-5
    after:rounded-full p-1 peer-checked:bg-primary-900 peer-checked:after:translate-x-4 ease-in-out duration-300 after:duration-300 mr-4"></span>
    {{ label }}
</label>