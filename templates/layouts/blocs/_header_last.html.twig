<header class="bg-white shadow fixed w-full z-50">
    <nav class="container mx-auto px-6 py-3 flex justify-between items-center">
        <a href="{{ path('app_home') }}" class="text-gray-800 text-xl font-bold">
            <img src="{{ asset('images/app-logo.svg') }}" alt="{{ app_name }} Logo" class="h-12 w-auto">
        </a>
        <div class="hidden md:flex space-x-4">
            <a href="{{ path('app_home') }}" class="text-gray-800 hover:text-gray-600">Accueil</a>
            <a href="#" class="text-gray-800 hover:text-gray-600">Services</a>
            <a href="#" class="text-gray-800 hover:text-gray-600">À propos</a>
            <a href="{{ path('app_contact') }}" class="text-gray-800 hover:text-gray-600">Contact</a>
        </div>
        <div class="hidden md:flex items-center space-x-3 ">
            {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin_home') }}"
                       class="btn-menu">Admin</a>
                {% endif %}
                <a href="{{ path('app_logout') }}"
                   class="btn-menu-alt">Se
                    déconnecter</a>
            {% else %}
                {#                <a href="{{ path('app_register') }}" #}
                {#                   class="btn-menu">Réserver</a> #}
                <a href="{{ path('app_login') }}"
                   class="">
                    {{ icon('user', 'md') }}
                </a>
            {% endif %}


        </div>
        <div class="md:hidden">
            <button type="button" id="menu-button"
                    class="text-gray-800 hover:text-gray-600 focus:outline-none focus:text-gray-600">
                <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M4 5h16v2H4V5zm0 7h16v2H4v-2zm0 7h16v2H4v-2z"></path>
                </svg>
            </button>
        </div>
    </nav>
    <div id="menu"
         class="hidden absolute w-full bg-white shadow-md transition-transform duration-500 ease-in-out transform">
        <div class="px-2 pt-2 pb-4 space-y-1 sm:px-3">
            <a href="#"
               class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Accueil</a>
            <a href="#"
               class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Services</a>
            <a href="#"
               class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">À
                propos</a>
            <a href="#"
               class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Contact</a>
            {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin_home') }}"
                       class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Admin</a>
                {% endif %}
                <a href="{{ path('app_logout') }}"
                   class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Se
                    déconnecter</a>
            {% else %}
                <a href="{{ path('app_register') }}"
                   class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Réserver</a>
                <a href="{{ path('app_login') }}"
                   class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Se
                    connecter</a>
            {% endif %}

        </div>
    </div>
</header>


<script type="text/javascript">
    document.getElementById('menu-button').addEventListener('click', function () {
        document.getElementById('menu').classList.toggle('hidden');
    });
</script>


